<h1>List of all movies</h1>

<table border="1">
<tr>
<td>ID</td>
<td>Image</td>
<td>Title</td>
<td>Year</td>
<td>Director</td>
<td></td>
</tr>

<% Movie.all.each do |a_movie| %>
<tr>
<td><%= a_movie.id %></td>
<td><img src="<%= a_movie.image %>" width="50"></td>
<td><%= a_movie.title %></td>
<td><%= a_movie.year %></td>
<td>
<% matching_records = Director.where({ :id => a_movie.director_id })%> 

<% the_director = matching_records.at(0) %>

<%= the_director.name %>
</td>
<td>
<a href="/movies/<%= a_movie.id %>">Show details</a>
</td>
</tr>
<% end %>
</table>
